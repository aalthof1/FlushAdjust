@model Ball
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Ball</h1>

<form method="post" asp-action="Create">
    <div class="backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <label asp-for="Manufacturer" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Manufacturer" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <label asp-for="Serial" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Serial" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    <label asp-for="Description" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-3">
                <partial name="_CreateAndBackToListButtonPartial" />
            </div>
        </div>
    </div>
</form>
