@model  BugReport
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Submit A Bug Report</h1>
<br />
<form method="post" asp-action="Index">
    <div class="backgroundWhite border">
        <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-3 offset-1">
                        <label asp-for="Name" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-3 offset-1">
                        <label asp-for="Email" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-3 offset-1">
                        <label asp-for="Details" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <textarea rows="5" asp-for="Details" class="form-control"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2 offset-2">
                    <a class="btn btn-primary form-control" asp-action="Index" asp-area="User" asp-controller="Home">Return Home</a>
                </div>
                <div class="col-2">
                    <input class="btn btn-success form-control" value="Submit" type="submit" />
                </div>
            </div>
        </div>
    </div>
</form>