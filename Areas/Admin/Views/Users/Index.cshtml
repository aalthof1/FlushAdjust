@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Users List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    @if (Model.Count() == 0)
    {
        <p>No Users... Gotta advertise better?</p>
    }
    else
    {
        <div>
            <table class="table table-striped border">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>@Html.DisplayNameFor(m => m.HomeCenter)</th>
                    <th></th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => user.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => user.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(m => user.HomeCenter)
                        </td>
                        <td>
                            <a class="btn btn-success text-white" asp-action="Lock" asp-route-id="@user.Id">
                                <i class="fas fa-lock-open"></i>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }

</div>


